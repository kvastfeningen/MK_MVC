@*@model MK_MVC.ViewModels.PeopleViewModel;
@using MK_MVC.Models*@
@model IEnumerable<Country>

@{
    string c = "";
    ViewData["Title"] = "Index";
}

<a asp-action="Create">Add Country</a>
<br />
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <!--<th>Country Id</th>-->
            <th>Country</th>

            <th>City, Cities</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var item in Model)
        {
            c = "";
            <tr>
                @*<td>@item.CountryId</td>*@
                <td>@item.CountryName</td>
                <td>
                    @foreach (var stad in item.Cities)
                    {
                        c = c + stad.CityName + ", ";
                    }
                    @c
                </td>
                <td> </td>
            </tr>
        }
    </tbody>
</table>